<div class="container">
  <div class="row justify-content-center">
    <div class="col-4">
      <h3>Add Tag to <%= @plant.name %></h3>
      <%= simple_form_for [@plant, @classification] do |f| %>
        <%= f.input :tag, collection: Tag.all, input_html: { multiple: true, data: { controller: 'tom-select'}}, include_hidden: false %>
        <%= f.submit 'Add Tag', class: 'btn btn-primary' %>
      <% end %>
    </div>
  </div>
</div>
